{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "rootDir": "src/",
    "outDir": "dist/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["test/"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
